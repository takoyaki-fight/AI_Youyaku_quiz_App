# Environment variables for local development.
# 1) Copy this file to .env.local
# 2) Fill in your values
# 3) Keep .env.local out of git (already ignored by .gitignore)

# Firebase Client SDK (public)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_APP_ID=

# GCP / Firebase Admin (server)
GOOGLE_CLOUD_PROJECT=
# Option A (local dev): empty and run `gcloud auth application-default login`
# Option B (local dev): paste service account JSON as one-line string in FIREBASE_ADMIN_SA_KEY
# Option C (recommended): set GOOGLE_APPLICATION_CREDENTIALS=./path/to/service-account.json
FIREBASE_ADMIN_SA_KEY=
GOOGLE_APPLICATION_CREDENTIALS=

# Vertex AI
VERTEX_AI_LOCATION=asia-northeast1
VERTEX_AI_MODEL=gemini-2.5-flash
# Chat timeout in ms. 0 disables timeout (recommended for local debugging).
CHAT_AI_TIMEOUT_MS=0

# Cloud Tasks (optional for local)
CLOUD_TASKS_QUEUE=daily-quiz-queue
CLOUD_TASKS_LOCATION=asia-northeast1
CLOUD_TASKS_SA_EMAIL=
# Shared secret for /api/internal/* endpoints (required in production)
INTERNAL_API_SECRET=

# App
APP_URL=http://localhost:3000
